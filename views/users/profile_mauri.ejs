<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head')%>
        <link rel="stylesheet" href='/css/profile.css' />
</head>

<body>
    <header>
        <%- include('../partials/header')%>
    </header>
    <section>
        <div class="center-conteiner">
            <form action="/profile?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="data">
                    <div class="image">
                        <img class="picture" src="/avatars/<%=data.image%> " alt="Imagen de perfil">
                        <input class="btn" type="file" name="avatar" id="avatar">
                    </div>

                    <input type="text"  name="name"     id="name"       value="<%=data.first_name%>">
                    <input type="text"  name="lastName" id="lastName"   value="<%=data.last_name%>" >
                    <input type="email" name="email"    id="email"      value="<%=data.email%>"     >

                    <div>
                        <label for="categoy">Condición Fiscal</label>
                        <% const categoryList=[ 'Usuario' , 'Administrador' , 'Supervisor' ] %>
                        <select name="categoy" id="categoy">
                            <option value="">Seleccione una categoría</option>
                            <% categoryList.forEach(category => {;%>
                                <option value="<%=category%>" 
                                       <%data.category===category? "selected" :null %>> 
                                       <%=category%> 
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <div>
                        <label for="newsLetter">Deseo Recibir Ofertas por e-mail</label>
                        <input type="checkbox" name="newsLetter" id="newsLetter" value="<% data.newsLetter ? " checked":
                            null %> ">
                    </div>
                </div>
            </form>
            <h2>Mis Compras</h2>
            <div class="data">
                <div class="buyCard">
                    <article>
                        <p>Pedido numero: 00001 - 00000123</p>
                        <p>Fecha: 10/05/2021</p>
                        <p>$1.545,00</p>
                        <p>Entregado</p>
                    </article>
                </div>
            </div>
        </div>
    </section>
    <footer>
        <%- include('../partials/footer')%>
    </footer>
</body>

</html>